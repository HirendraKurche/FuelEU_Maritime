{
  "version": 2,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "npm ci --include=dev",
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/$1"
    }
  ]
}
